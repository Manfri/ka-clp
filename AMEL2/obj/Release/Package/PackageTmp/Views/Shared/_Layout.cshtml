</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">KA Cloppenburg</a>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Startseite", "Index", "Home")</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Aggregate<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @if (Request.IsAuthenticated && (HttpContext.Current.User.IsInRole("canEdit") || HttpContext.Current.User.IsInRole("canNoEdit")))
                        {
                            <li>@Html.ActionLink("Aggregatestammdaten", "old_ademsr", "Berichts")</li>
                            <li>@Html.ActionLink("Aggregatemaschinendaten", "old_advmt", "Berichts")</li>
                            <li>@Html.ActionLink("Zusätzliche Maschinendaten", "old_ab", "Berichts")</li>
                        }
                        else
                        {
                            <li></li>
                        }
                    </ul>
                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Messstellen<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @if (Request.IsAuthenticated && (HttpContext.Current.User.IsInRole("canEdit") || HttpContext.Current.User.IsInRole("canNoEdit")))
                        {
                            <li>@Html.ActionLink("Messstellenstammdaten", "old_msa", "Berichts")</li>
                            <li>@Html.ActionLink("Messstellen Zusätzliche Daten", "old_msb", "Berichts")</li>
                        }
                        else
                        {
                            <li></li>
                        }


                    </ul>
                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Dokumentation<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @if (Request.IsAuthenticated && (HttpContext.Current.User.IsInRole("canEdit") || HttpContext.Current.User.IsInRole("canNoEdit")))
                        {
                            <li>@Html.ActionLink("Anlagendokumentation 2018", "old_mdvmt", "Berichts")</li>
                            <li>@Html.ActionLink("Verfahrensfließbilder", "old_mdvmt2", "Berichts")</li>
                            <li>@Html.ActionLink("LV's der 6. Baumassnahme", "old_mdvmt3", "Berichts")</li>
                            <li>@Html.ActionLink("Lagepläne", "old_mdvmt4", "Berichts")</li>
                            <li>@Html.ActionLink("Bauzeichnungen 2017", "old_mdvmt5", "Berichts")</li>
                            <li>@Html.ActionLink("Steuerungsbeschreibungen", "old_mdvmt6", "Berichts")</li>
                        }
                        else
                        {
                            <li></li>
                        }

                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a class="navbar-brand-small" href="#">@GlobalVariables.Email</a></li>
                @if (string.IsNullOrEmpty(GlobalVariables.Email))
                {
                    <li>@Html.ActionLink("Anmelden", "Login", "Account")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Abmelden", "Logoff", "Home")</li>
                }
            </ul>

        </div>
    </nav>



    <div class="rest container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016-@DateTime.Now.Year - Pandatasoft - </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
